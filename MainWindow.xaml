<Window x:Name="MainWindow1" x:Class="VAS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="980.612" Width="516" Closing="MainWindow1_Closing" Closed="MainWindow1_Closed" Unloaded="MainWindow1_Unloaded">
    <Grid Margin="0,0,2,0" >
        <GroupBox Header="VIZ" HorizontalAlignment="Left" Height="106" Margin="19,30,0,0" VerticalAlignment="Top" Width="291"/>

        <GroupBox Header="Info" HorizontalAlignment="Left" Height="126" Margin="317,10,0,0" VerticalAlignment="Top" Width="176"/>

        <CheckBox x:Name="ChkDecklink" Content="Activate Decklink Routines" HorizontalAlignment="Left" Height="19" Margin="35,283,0,0" VerticalAlignment="Top" Width="187" IsChecked="True"/>
        <ToggleButton x:Name="StartTracker" Content="Start Tracker" HorizontalAlignment="Left" Margin="36,637,0,0" VerticalAlignment="Top" Width="114" Click="Button_Click" Checked="StartTracker_Checked" Unchecked="StartTracker_Unchecked" Height="34"/>
        <TextBlock x:Name="TxtAnchorPt" Margin="188,637,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="-0.3,0.625" Height="41" Background="#FFE4E4E4" HorizontalAlignment="Left" Width="308"/>
        <ToggleButton x:Name="ChkAnchor" Content="Show Anchor 1" HorizontalAlignment="Left" Margin="34,688,0,0" VerticalAlignment="Top" Width="91" Checked="Anchor_Checked" Unchecked="Anchor_Unchecked" IsEnabled="False"/>
        <ToggleButton x:Name="ChkAnchor2" Content="Show Anchor 2" HorizontalAlignment="Left" Margin="34,715,0,0" VerticalAlignment="Top" Width="91" Checked="Anchor2_Checked" Unchecked="Anchor2_Unchecked" IsEnabled="False"/>
        <ToggleButton x:Name="ChkAnchor3" Content="Show Anchor 3" HorizontalAlignment="Left" Margin="34,742,0,0" VerticalAlignment="Top" Width="91" Checked="Anchor3_Checked" Unchecked="Anchor3_Unchecked" IsEnabled="False"/>
        <ListBox x:Name="LstCommands" Margin="188,688,0,0" Height="207" VerticalAlignment="Top" HorizontalAlignment="Left" Width="308"/>
        <Label Content="Area Tracking:" HorizontalAlignment="Left" Height="26" Margin="37,438,0,0" VerticalAlignment="Top" Width="87"/>
        <Label Content="Min Points" HorizontalAlignment="Left" Height="26" Margin="37,464,0,0" VerticalAlignment="Top" Width="87"/>
        <Label Content="Processor" HorizontalAlignment="Left" Height="26" Margin="37,412,0,0" VerticalAlignment="Top" Width="87"/>
        <ComboBox x:Name="CmbProcTech" HorizontalAlignment="Left" Height="26" Margin="129,412,0,0" VerticalAlignment="Top" Width="87" SelectedIndex="1">
            <ComboBoxItem Content="CPU" HorizontalAlignment="Left" Width="88"/>
            <ComboBoxItem Content="GPU" HorizontalAlignment="Left" Width="88"/>
        </ComboBox>
        <CheckBox x:Name="ChkActivateSBD" Content="Activate SBD" HorizontalAlignment="Left" Margin="41,498,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,-0.75" Width="93" Checked="ChkActivateSBD_Checked" Unchecked="ChkActivateSBD_Unchecked"/>
        <TextBox x:Name="TxtAreaTracking" HorizontalAlignment="Left" Height="21" Margin="129,443,0,0" TextWrapping="Wrap" Text="75,75" VerticalAlignment="Top" Width="87"/>
        <TextBox x:Name="TxtMinPoints" HorizontalAlignment="Left" Height="21" Margin="129,469,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Width="45"/>
        <Label Content="SBD Threshold [1-0]" HorizontalAlignment="Left" Height="26" Margin="64,522,0,0" VerticalAlignment="Top" Width="112"/>
        <TextBox x:Name="TxtSBDThreshold" HorizontalAlignment="Left" Height="23" Margin="181,525,0,0" TextWrapping="Wrap" Text="0.7" VerticalAlignment="Top" Width="32" SelectionOpacity="4" IsEnabled="False"/>
        <TextBox x:Name="TxtTCPAddress" HorizontalAlignment="Left" Height="20" Margin="73,82,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="98"/>
        <TextBox x:Name="TxtUDPAddress" HorizontalAlignment="Left" Height="20" Margin="73,107,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="98"/>
        <TextBox x:Name="TxtTCPPort" HorizontalAlignment="Left" Height="20" Margin="176,82,0,0" TextWrapping="Wrap" Text="80" VerticalAlignment="Top" Width="42"/>
        <TextBox x:Name="TxtUDPPort" HorizontalAlignment="Left" Height="20" Margin="176,107,0,0" TextWrapping="Wrap" Text="80" VerticalAlignment="Top" Width="42"/>
        <Button x:Name="ChkConnectVIZ" Content="Connect VIZ" HorizontalAlignment="Left" Height="45" Margin="231,82,0,0" VerticalAlignment="Top" Width="71" RenderTransformOrigin="0.302,0.494" Click="ChkConnectVIZ_Click"/>
        <Label Content="FR Pot:" HorizontalAlignment="Left" Margin="328,76,0,0" VerticalAlignment="Top" Height="26" Width="69"/>
        <Label x:Name="TxtPotentialFR" Content="0" HorizontalAlignment="Left" Margin="402,76,0,0" VerticalAlignment="Top" Width="36"/>
        <Label Content="Frame Tim:" HorizontalAlignment="Left" Margin="328,107,0,0" VerticalAlignment="Top" Height="26" Width="69"/>
        <Label x:Name="TxtAverageFrameTime" Content="0" HorizontalAlignment="Left" Margin="402,107,0,0" VerticalAlignment="Top" Width="36"/>
        <TextBox x:Name="TxtFileName" HorizontalAlignment="Left" Height="22" Margin="108,146,0,0" Text="TextBox" VerticalAlignment="Top" Width="306" TextWrapping="Wrap" ForceCursor="True"/>
        <TextBox x:Name="TxtDeviceNumber" HorizontalAlignment="Left" Height="25" Margin="124,253,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="24"/>
        <RadioButton x:Name="RadFromFile" Content="From File" GroupName="Source" HorizontalAlignment="Left" Margin="35,150,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="RadFromDevice" Content="From Device" GroupName="Source" HorizontalAlignment="Left" Margin="34,256,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <Label Content="TCP" HorizontalAlignment="Left" Height="26" Margin="32,76,0,0" VerticalAlignment="Top" Width="36"/>
        <Label Content="UDP" HorizontalAlignment="Left" Height="26" Margin="32,101,0,0" VerticalAlignment="Top" Width="36"/>
        <TextBox x:Name="TxtScene" HorizontalAlignment="Left" Height="26" Margin="34,50,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="268"/>
        <Button x:Name="Help" Content="Help" Height="26" Margin="388,525,0,0" VerticalAlignment="Top" Click="Help_Click" HorizontalAlignment="Left" Width="108"/>
        <CheckBox x:Name="ChkResize" Content="Resize at:" HorizontalAlignment="Left" Height="20" Margin="34,384,0,0" VerticalAlignment="Top" Width="91"/>
        <TextBox x:Name="TxtResizeAt" HorizontalAlignment="Left" Height="23" Margin="130,384,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="87"/>
        <Slider x:Name="SlVideoProgression" HorizontalAlignment="Left" Height="23" Margin="35,173,0,0" VerticalAlignment="Top" Width="431" Maximum="1" SmallChange="0.001" ValueChanged="SlVideoProgression_ValueChanged"/>
        <CheckBox x:Name="ChkPointDisplacementCtrl" Content="Points Dispersion Control (*)" HorizontalAlignment="Left" Margin="253,435,0,0" VerticalAlignment="Top" Width="185" IsEnabled="False"/>
        <Label Content="Absolute" HorizontalAlignment="Left" Height="26" Margin="275,455,0,0" VerticalAlignment="Top" Width="58" IsEnabled="False"/>
        <Label Content="Relative" HorizontalAlignment="Left" Height="26" Margin="275,481,0,0" VerticalAlignment="Top" Width="58" IsEnabled="False"/>
        <TextBox x:Name="TxtAbsoluteDispersion" HorizontalAlignment="Left" Height="21" Margin="338,460,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="50" IsEnabled="False"/>
        <TextBox x:Name="TxtRelativeDispersion" HorizontalAlignment="Left" Height="21" Margin="338,486,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="50" IsEnabled="False"/>
        <TextBox x:Name="TxtInterFrameAnchorDisp" HorizontalAlignment="Left" Height="21" Margin="423,383,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="42" TextChanged="TxtInterFrameAnchorDisp_TextChanged"/>
        <Label Content="(*)GPU only" HorizontalAlignment="Left" Height="25" Margin="253,353,0,0" VerticalAlignment="Top" Width="105" IsEnabled="False"/>
        <Button x:Name="BtFileDialog" Content="..." HorizontalAlignment="Left" Height="23" Margin="421,146,0,0" VerticalAlignment="Top" Width="45" Click="BtFileDialog_Click"/>
        <TextBox x:Name="TxtCaptureResolution" HorizontalAlignment="Left" Height="25" Margin="225,253,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="113"/>
        <Label Content="Resolution" HorizontalAlignment="Left" Height="25" Margin="153,251,0,0" VerticalAlignment="Top" Width="67"/>
        <Label Content="Frame Rate" HorizontalAlignment="Left" Height="25" Margin="343,251,0,0" VerticalAlignment="Top" Width="71"/>
        <TextBox x:Name="TxtCaptureFrameRate" HorizontalAlignment="Left" Height="25" Margin="414,253,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="52"/>
        <ToggleButton x:Name="BtnPausePlay" Content="Pause" HorizontalAlignment="Left" Height="22" Margin="36,201,0,0" VerticalAlignment="Top" Width="46" RenderTransformOrigin="0.478,0.455" Checked="BtnPausePlay_Checked" Unchecked="BtnPausePlay_Unchecked"/>
        <Label Content="Max Anchor Displacement(*)" HorizontalAlignment="Left" Height="26" Margin="253,380,0,0" VerticalAlignment="Top" Width="165" RenderTransformOrigin="2.989,-0.462"/>
        <CheckBox x:Name="ChkSCIM" Content="SCIM" HorizontalAlignment="Left" Margin="34,353,0,0" VerticalAlignment="Top" IsChecked="{Binding ElementName=MainWindow1, Path=ActivateSCIM, Mode=TwoWay}"/>
        <TextBox x:Name="TxtSendDataDelay" HorizontalAlignment="Left" Height="23" Margin="105,872,0,0" TextWrapping="Wrap" Text="{Binding ElementName=MainWindow1, StringFormat=N2, Path=SendDelay, Mode=TwoWay}" VerticalAlignment="Top" Width="65" TextChanged="TxtSendDataDelay_TextChanged"/>
        <Label Content="Send delay" HorizontalAlignment="Left" Height="32" Margin="21,868,0,0" VerticalAlignment="Top" Width="70"/>
        <Slider HorizontalAlignment="Left" Height="23" Margin="21,905,0,0" VerticalAlignment="Top" Width="472" Maximum="2000" SmallChange="1" Value="{Binding ElementName=MainWindow1, Path=SendDelay, Mode=TwoWay}"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="1" Margin="13,585,0,0" Stroke="Black" VerticalAlignment="Top" Width="483"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="1" Margin="13,332,0,0" Stroke="Black" VerticalAlignment="Top" Width="483"/>
        <Label Content="Debug" HorizontalAlignment="Left" Margin="328,30,0,0" VerticalAlignment="Top" Height="26" Width="45"/>
        <Label x:Name="TxtDebugInfo" Content="0" HorizontalAlignment="Left" Margin="378,30,0,0" VerticalAlignment="Top" Width="105" RenderTransformOrigin="-0.318,0.5"/>

    </Grid>
</Window>
